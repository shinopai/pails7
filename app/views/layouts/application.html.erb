<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:html_title) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "main", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons", media: 'all' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if flash[:notice] %>
        <p class="notice text-center bg-green-100 rounded-lg py-5 px-6 text-base text-green-700 mb-3"><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
        <p class="alert text-center bg-red-100 rounded-lg py-5 px-6 text-base text-green-700 mb-3"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
