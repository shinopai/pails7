<div class="w-[80%] mx-auto text-center mt-[50px]">
<div class="block p-6 rounded-lg shadow-lg bg-white w-full max-w-[500px] mx-auto">
  <%= form_with model: @post, url: posts_path, local: true do |new_post| %>
  <%= render "posts/shared/post_error_messages", model: @post %>

    <div class="form-group mb-6">
        <%= new_post.label :title, 'Title', class: 'form-label inline-block mb-2 text-gray-700' %><br />
    <%= new_post.text_field :title, autofocus: true, class: 'form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        text-gray-700
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none' %>
    </div>
    <div class="form-group mb-6">
        <%= new_post.label :body, 'Body', class: 'form-label inline-block mb-2 text-gray-700' %><br />
    <%= new_post.text_area :body, autofocus: true, class: 'form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        text-gray-700
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        resize-none
        m-0
        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', rows: 5 %>
    </div>
    <div class="form-group mb-6">
        <%= new_post.label :image, 'Image', class: 'form-label inline-block mb-2 text-gray-700' %><br />
    <%= new_post.file_field :image, autofocus: true, class: 'form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        text-gray-700
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none' %>
    </div>
    <%= new_post.submit 'Create', class: 'w-full
      px-6
      py-2.5
      bg-blue-600
      text-white
      font-medium
      text-xs
      leading-tight
      uppercase
      rounded
      shadow-md
      hover:bg-blue-700 hover:shadow-lg
      focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0
      active:bg-blue-800 active:shadow-lg
      transition
      duration-150
      ease-in-out
      cursor-pointer' %>
    <%= link_to 'Back', root_path %>
<% end %>
</div>
</div>
